<%- include("./includes/head.ejs"); %>
    <%- include("./includes/navMenu.ejs"); %>

        <section class="container">
            <div class="conteudoAgenda">
                <h2 id="agenda">Agenda</h2>
                <p>Seus contatos estão abaixo</p>
            </div>

            <%- include("./includes/msgError.ejs"); %>

                <% if(contatos.length > 0) { %>
                    <table>
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Sobrenome</th>
                                <th>Celular</th>
                                <th>email</th>
                                <th>Editar</th>
                                <th>Excluir</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% contatos.forEach(contato=>{ %>
                                <tr>
                                    <td>
                                        <%= contato.nome %>
                                    </td>
                                    <td>
                                        <%= contato.sobrenome %>
                                    </td>
                                    <td>
                                        <%= contato.telefone %>
                                    </td>
                                    <td>
                                        <%= contato.email %>
                                    </td>
                                    <td><a class="linkEditar" href="/contatos/<%= contato._id %>">Editar</a></td>
                                    <td><a class="linkDeletar" href="/contatos/delete/<%= contato._id %>">Excluir</a></td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                    <% } else { %>
                        <p id="nãoTemContato">Não tem nenhum contato cadastrado na agenda!</p>
                    <% } %>
        </section>
        <%- include("./includes/footer.ejs"); %>